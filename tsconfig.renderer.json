{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/renderer/**/*.ts"
  ],
  "exclude": [
    "src/main/**/*",
    "src/tests/**/*"
  ]
}
